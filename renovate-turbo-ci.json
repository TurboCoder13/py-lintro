{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "description": "Auto-bump turbo-ci SHA references",
      "matchManagers": ["github-actions"],
      "matchPaths": [
        "**/.github/workflows/*.yml",
        "**/.github/workflows/*.yaml"
      ],
      "matchPatterns": ["TurboCoder13/turbo-ci"],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["before 3am on monday"],
      "groupName": "turbo-ci updates",
      "groupSlug": "turbo-ci",
      "labels": ["dependencies", "ci"],
      "commitMessagePrefix": "ci:",
      "commitMessageTopic": "bump turbo-ci",
      "commitMessageExtra": "to {{newDigestShort}}",
      "prTitle": "ci: bump turbo-ci to {{newDigestShort}}",
      "prBody": "This PR bumps turbo-ci references to the latest commit SHA.\n\n**What changed:**\n- Updated turbo-ci workflow/action references\n- SHA: {{newDigestShort}}\n\n**Testing:**\n- [ ] CI passes\n- [ ] No breaking changes detected\n\n**Auto-generated by Renovate**"
    }
  ]
}
