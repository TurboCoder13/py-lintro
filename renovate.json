{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchCategories": ["python"],
      "enabled": true
    },
    {
      "matchCategories": ["docker"],
      "enabled": true
    },
    {
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": ["docker"],
      "matchUpdateTypes": ["digest", "patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["minor"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "all major dependencies",
      "groupSlug": "all-major",
      "matchPackageNames": ["**"]
    },
    {
      "matchDatasources": ["pypi"],
      "matchPackageNames": ["click"],
      "allowedVersions": "<8.2",
      "automerge": false,
      "labels": ["blocked-by-psr"]
    },
    {
      "groupName": "click + psr",
      "matchDatasources": ["pypi"],
      "matchPackageNames": [
        "click",
        "python-semantic-release"
      ],
      "automerge": false
    },
    {
      "groupName": "pytest packages",
      "groupSlug": "pytest",
      "matchPackageNames": ["/^pytest/"]
    },
    {
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "groupName": "github-actions",
      "separateMinorPatch": false
    },
    {
      "matchManagers": [
        "pep621",
        "pip_requirements",
        "pip_setup",
        "pipenv",
        "poetry",
        "setup-cfg",
        "setup-py",
        "uv"
      ],
      "matchPackageNames": ["python"],
      "rangeStrategy": "widen"
    },
    {
      "groupName": "linting tools",
      "groupSlug": "linting-tools",
      "matchPackageNames": [
        "hadolint",
        "hadolint/hadolint",
        "actionlint",
        "rhysd/actionlint",
        "prettier",
        "markdownlint-cli2",
        "oxlint",
        "oxfmt",
        "gitleaks",
        "gitleaks/gitleaks",
        "shellcheck",
        "koalaman/shellcheck",
        "shfmt",
        "mvdan/sh",
        "taplo",
        "tamasfe/taplo",
        "astro",
        "@astrojs/check"
      ],
      "automerge": false
    }
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/^requirements.*\\.txt$/"
    ]
  },
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/test-and-coverage\\.yml$/"
      ],
      "matchStrings": [
        "CODECOV_VERSION:\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "codecov/uploader"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Dockerfile"],
      "matchStrings": [
        "ARG HADOLINT_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "hadolint/hadolint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Dockerfile"],
      "matchStrings": [
        "ARG ACTIONLINT_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "rhysd/actionlint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "Dockerfile\\.tools"
      ],
      "matchStrings": [
        "ARG BUN_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "oven-sh/bun",
      "extractVersionTemplate": "^bun-v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "Dockerfile\\.tools"
      ],
      "matchStrings": [
        "ARG UV_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "astral-sh/uv"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/reusable-sbom\\.yml$/",
        "scripts/ci/deployment/sbom-install-binary-gh\\.sh"
      ],
      "matchStrings": [
        "BOMCTL_VERSION[=:]\\s*v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "bomctl/bomctl",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "description": "Update hadolint version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.HADOLINT:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "hadolint/hadolint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "description": "Update actionlint version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.ACTIONLINT:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "rhysd/actionlint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "description": "Update astro versions in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.ASTRO_CHECK:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\"",
        "\"@astrojs/check\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "npm",
      "packageNameTemplate": "astro"
    },
    {
      "description": "Update gitleaks version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.GITLEAKS:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "gitleaks/gitleaks",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "description": "Update shellcheck version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.SHELLCHECK:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "koalaman/shellcheck",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "description": "Update shfmt version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.SHFMT:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "mvdan/sh",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "description": "Update taplo version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.TAPLO:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "tamasfe/taplo",
      "extractVersionTemplate": "^release-taplo-(?<version>.*)$"
    },
    {
      "description": "Update semgrep version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.SEMGREP:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "pypi",
      "packageNameTemplate": "semgrep"
    },
    {
      "description": "Update sqlfluff version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.SQLFLUFF:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "pypi",
      "packageNameTemplate": "sqlfluff"
    },
    {
      "description": "Update pytest version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.PYTEST:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "pypi",
      "packageNameTemplate": "pytest"
    },
    {
      "description": "Update cargo-audit version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.CARGO_AUDIT:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "crate",
      "packageNameTemplate": "cargo-audit"
    },
    {
      "description": "Update clippy version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.CLIPPY:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "rust-lang/rust-clippy",
      "extractVersionTemplate": "^rust-(?<version>.*)$"
    },
    {
      "description": "Update rustfmt version in _tool_versions.py",
      "customType": "regex",
      "managerFilePatterns": [
        "lintro/_tool_versions\\.py"
      ],
      "matchStrings": [
        "ToolName\\.RUSTFMT:\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "rust-lang/rustfmt",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"],
    "automerge": true,
    "automergeType": "branch",
    "commitMessageAction": "update lockfile"
  },
  "schedule": ["after 22:00", "before 23:00"],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "rangeStrategy": "pin",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "prTitle": "{{semanticCommitType}}({{semanticCommitScope}}): {{#if isMajor}}update {{depName}} to {{newVersion}} (major){{else if isMinor}}update {{depName}} to {{newVersion}} (minor){{else}}{{#if newVersion}}update {{depName}} to {{newVersion}}{{else}}update {{depName}} digest{{/if}}{{/if}}",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "commitMessagePrefix": "chore(deps):",
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": false,
  "prBody": "## Dependency Updates\n\nThis PR contains the following updates:\n\n| Package | Change | Type |\n|:--------|:-------|:-----|\n{{#each upgrades as |upgrade|}}\n| `{{#if upgrade.packageName}}{{upgrade.packageName}}{{else}}{{upgrade.depName}}{{/if}}` | `{{upgrade.currentVersion}}` ‚Üí `{{upgrade.newVersion}}` | {{upgrade.updateType}} |\n{{/each}}\n\n## Renovate Configuration\n\nüìÖ **Schedule**: At night between 10 PM and 11 PM UTC.\n\nüö¶ **Automerge**: Enabled for patch and minor updates only.\n\n‚ôªÔ∏è **Rebasing**: Whenever PR becomes conflicted, or you tick the rebase/retry checkbox.\n\nüîï **Ignore**: Close this PR and you won't be reminded about these updates again.\n\n---\n\nThis PR has been generated by [Renovate Bot](https://github.com/renovatebot/renovate)."
}
