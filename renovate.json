{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchCategories": ["python"],
      "enabled": true
    },
    {
      "matchCategories": ["docker"],
      "enabled": true
    },
    {
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": ["docker"],
      "matchUpdateTypes": ["digest", "patch"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["minor"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "all major dependencies",
      "groupSlug": "all-major",
      "matchPackageNames": ["**"]
    },
    {
      "matchDatasources": ["pypi"],
      "matchPackageNames": ["click"],
      "allowedVersions": "<8.2",
      "automerge": false,
      "labels": ["blocked-by-psr"]
    },
    {
      "groupName": "click + psr",
      "matchDatasources": ["pypi"],
      "matchPackageNames": ["click", "python-semantic-release"],
      "automerge": false
    },
    {
      "groupName": "pytest packages",
      "groupSlug": "pytest",
      "matchPackageNames": ["/^pytest/"]
    },
    {
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "groupName": "github-actions",
      "separateMinorPatch": false
    },
    {
      "matchManagers": [
        "pip_requirements",
        "pip_setup",
        "pipenv",
        "poetry",
        "setup-cfg",
        "setup-py",
        "uv"
      ],
      "matchPackageNames": ["python"],
      "rangeStrategy": "update-lockfile"
    },
    {
      "groupName": "linting tools",
      "groupSlug": "linting-tools",
      "matchPackageNames": [
        "hadolint",
        "actionlint",
        "prettier",
        "markdownlint-cli2",
        "@biomejs/biome",
        "gitleaks",
        "shellcheck",
        "shfmt",
        "taplo"
      ],
      "automerge": false
    }
  ],
  "pip_requirements": {
    "managerFilePatterns": ["/^requirements.*\\.txt$/"]
  },
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.github/workflows/test-and-coverage\\.yml$/"],
      "matchStrings": [
        "CODECOV_VERSION:\\s*(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "codecov/uploader"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Dockerfile"],
      "matchStrings": [
        "ARG HADOLINT_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "hadolint/hadolint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Dockerfile"],
      "matchStrings": [
        "ARG ACTIONLINT_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "rhysd/actionlint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Dockerfile\\.tools"],
      "matchStrings": [
        "ARG BUN_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "oven-sh/bun",
      "extractVersionTemplate": "^bun-v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Dockerfile\\.tools"],
      "matchStrings": [
        "ARG UV_VERSION=(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "astral-sh/uv"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/reusable-sbom\\.yml$/",
        "scripts/ci/deployment/sbom-install-binary-gh\\.sh"
      ],
      "matchStrings": [
        "BOMCTL_VERSION[=:]\\s*v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "bomctl/bomctl",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"hadolint\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "hadolint/hadolint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"actionlint\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "rhysd/actionlint",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"prettier\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "npm",
      "packageNameTemplate": "prettier"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"biome\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "npm",
      "packageNameTemplate": "@biomejs/biome"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"markdownlint\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "npm",
      "packageNameTemplate": "markdownlint-cli2"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"gitleaks\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "gitleaks/gitleaks",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"shellcheck\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "koalaman/shellcheck",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"shfmt\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "mvdan/sh",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"taplo\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "tamasfe/taplo",
      "extractVersionTemplate": "^release-taplo-(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"semgrep\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "pypi",
      "packageNameTemplate": "semgrep"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"sqlfluff\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "pypi",
      "packageNameTemplate": "sqlfluff"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"pytest\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "pypi",
      "packageNameTemplate": "pytest"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["lintro/_tool_versions\\.py"],
      "matchStrings": [
        "\"cargo_audit\":\\s*\"(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "datasourceTemplate": "crate",
      "packageNameTemplate": "cargo-audit"
    }
  ],
  "schedule": ["after 22:00", "before 23:00"],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "rangeStrategy": "pin",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "prTitle": "{{semanticCommitType}}({{semanticCommitScope}}): {{#if isMajor}}update {{depName}} to {{newVersion}} (major){{else if isMinor}}update {{depName}} to {{newVersion}} (minor){{else}}{{#if newVersion}}update {{depName}} to {{newVersion}}{{else}}update {{depName}} digest{{/if}}{{/if}}",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "commitMessagePrefix": "chore(deps):",
  "assigneesFromCodeOwners": false,
  "reviewersFromCodeOwners": false,
  "prBody": "## Dependency Updates\n\nThis PR contains the following updates:\n\n| Package | Change | Type |\n|:--------|:-------|:-----|\n{{#each upgrades as |upgrade|}}\n| `{{#if upgrade.packageName}}{{upgrade.packageName}}{{else}}{{upgrade.depName}}{{/if}}` | `{{upgrade.currentVersion}}` ‚Üí `{{upgrade.newVersion}}` | {{upgrade.updateType}} |\n{{/each}}\n\n## Renovate Configuration\n\nüìÖ **Schedule**: At night between 10 PM and 11 PM UTC.\n\nüö¶ **Automerge**: Enabled for patch and minor updates only.\n\n‚ôªÔ∏è **Rebasing**: Whenever PR becomes conflicted, or you tick the rebase/retry checkbox.\n\nüîï **Ignore**: Close this PR and you won't be reminded about these updates again.\n\n---\n\nThis PR has been generated by [Renovate Bot](https://github.com/renovatebot/renovate)."
}
